<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ImageView para el fondo -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background_infantil_2" />

    <!-- Contenedor de los elementos centrados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="20dp"
        android:layout_marginBottom="60dp">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/simon_logo"
            android:layout_marginBottom="10dp"
            />

        <!-- Botón de inicio centrado -->
        <ImageView
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/startbuttonsin"
            android:layout_marginBottom="20dp"/>

        <!-- Botón de salida centrado -->
        <ImageView
            android:id="@+id/exitButton"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/exitbuttonsin"/>
    </LinearLayout>

    <!-- TextView final al fondo de la pantalla -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Centre d'Estudis Politécnics - Roger Alonso"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat"
        android:background="@color/black"
        android:textColor="@color/white"
        android:padding="5dp"/>
</FrameLayout>
